├── .claude/
│   ├── skills/          # Skills（1WF=1Skill）
│   ├── agents/          # Sub Agents（QC用等）
│   └── commands/        # スラッシュコマンド
├── .codex/
│   ├── skills/          # Skills（1WF=1Skill）
│   ├── agents/          # Sub Agents（QC用等）
│   └── prompts/         # スラッシュコマンド
├── Flow/                # 作業中ドラフト
├── Stock/               # 確定版
│   └── programs/{project}/
├── Archived/            # 履歴
├── scripts/
└── README.md
```

